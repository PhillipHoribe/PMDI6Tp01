<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tp01.View.LoginView">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry Text="{Binding Id}" Placeholder="Id"/>
            <Entry IsPassword="True" Text="{Binding Password}" Placeholder="password"/>
            <Button Text="Login" Command="{Binding LoginCommand}"/>
            <Button Text="limpar" Command="{Binding LimparCommand}" />
            <Button Text="Creditos" Command="{Binding CreditosCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>